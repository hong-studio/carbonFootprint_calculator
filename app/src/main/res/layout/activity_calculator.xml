<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탄소발자국 계산기"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/kotra_bold"
        android:textColor="@color/black"
        android:padding="16dp"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/bg02"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/item01"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전기 사용량 : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/ed01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자 입력"
            android:ems="5"
            android:background="@drawable/bg_edittext"
            android:layout_margin="4dp"
            android:maxLength="6"
            android:inputType="number"
            android:padding="8dp"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kWh/월"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/item02"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가스 사용량 : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/ed02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자 입력"
            android:ems="5"
            android:background="@drawable/bg_edittext"
            android:layout_margin="4dp"
            android:maxLength="6"
            android:inputType="number"
            android:padding="8dp"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="㎥/월"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="28dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/item03"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수도 사용량 : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/ed03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자 입력"
            android:ems="5"
            android:background="@drawable/bg_edittext"
            android:layout_margin="4dp"
            android:maxLength="6"
            android:inputType="number"
            android:padding="8dp"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="㎥/월"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rb01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경유"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rb02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휘발유"
            android:textSize="16sp"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LPG"
            android:textSize="16sp"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음"
            android:textSize="16sp"
            android:layout_margin="8dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/item04"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_gasoline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경유 사용량 : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/ed04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자 입력"
            android:ems="5"
            android:background="@drawable/bg_edittext"
            android:layout_margin="4dp"
            android:maxLength="6"
            android:inputType="number"
            android:padding="8dp"
            android:visibility="visible"
            android:gravity="right"/>
        <TextView
            android:id="@+id/tv_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km/월"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="초기화"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_button_round"
            app:backgroundTint="@null"
            android:layout_margin="20dp"
            android:onClick="btnReset"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="결과보기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/bg_button_round"
            app:backgroundTint="@null"
            android:layout_margin="20dp"
            android:onClick="btnResult"/>
    </LinearLayout>

</LinearLayout>